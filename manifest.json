{
  "manifest_version": 3,
  "name": "IMDb Rotten Tomatoes Ratings",
  "version": "1.0",
  "description": "Displays Rotten Tomatoes rating next to IMDb score.",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.imdb.com/title/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.rottentomatoes.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/cinema.png"],
      "matches": ["https://www.imdb.com/*"]
    }
  ]
}